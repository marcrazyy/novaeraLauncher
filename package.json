{
    "name": "novaera-launcher",
    "version": "0.0.2",
    "description": "Nova Era Launcher",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win",
        "publish": "electron-builder --win -p always"
    },
    "keywords": [
        "novaerarp",
        "novaera"
    ],
    "author": "RenildoMarcio",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "https://github.com/marcrazyy/novaeraLauncher.git"
    },
    "build": {
        "appId": "NovaEraRP",
        "productName": "NovaEraRP",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "build/icon.ico"
        },
        "nsis": {
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/uninstall.ico",
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "runAfterFinish": true,
            "createStartMenuShortcut": true,
            "packElevateHelper": true,
            "createDesktopShortcut": true,
            "shortcutName": "Nova Era RP",
            "license": "eula.txt"
        },
        "publish": [
            { "provider": "github",
                "owner": "marcrazyy",
                "repo": "novaeraLauncher",
                "releaseType": "release",
                "token": "8509492bfb57256adfa56242e79c67e10c437aea",
                "updaterCacheDirName": "novaEra-launcher"
            }
        ]
    },
    "devDependencies": {
        "electron": "^9.4.0",
        "electron-builder": "^22.6.0",
        "electron-rebuild": "^1.10.1",
        "electron-squirrel-startup": "^1.0.0",
        "jquery": "^3.4.1",
        "update-electron-app": "^1.5.0"
    },
    "dependencies": {
        "bootstrap": "^4.4.1",
        "child_process": "^1.0.2",
        "discord-rich-presence": "0.0.8",
        "electron-dl": "^3.0.0",
        "electron-is-dev": "^1.2.0",
        "electron-log": "^4.1.2",
        "electron-reload": "^1.5.0",
        "electron-updater": "^4.3.1",
        "fs": "0.0.1-security",
        "http": "0.0.1-security",
        "https": "^1.0.0",
        "nan": "^2.14.1",
        "node-gyp": "^6.1.0",
        "node-tcp-proxy": "0.0.15",
        "os": "^0.1.1",
        "path": "^0.12.7",
        "randomstring": "^1.1.5",
        "udp-proxy": "^1.2.0"
    }
}
